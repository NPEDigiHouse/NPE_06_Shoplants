<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFavoritePlant"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:backgroundTint="@color/tertiaryBgColor"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFavoritePlantIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center"
            android:layout_margin="24dp"
            android:src="@drawable/ic_baseline_favorite_28"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivFavoritePlantPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:padding="40dp"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/kaktus_plant" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvFavoritePlantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_sans_extrabold"
        android:gravity="center"
        android:maxLines="2"
        android:shadowColor="@color/lightPrimaryColor"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="8"
        android:textColor="@color/primaryColor"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvFavoritePlant"
        tools:text="Lavender Plant" />

    <TextView
        android:id="@+id/tvFavoritePlantPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:gravity="center"
        android:textColor="@color/primaryColor"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tvFavoritePlantName"
        tools:text="Rp50.000" />

</androidx.constraintlayout.widget.ConstraintLayout>